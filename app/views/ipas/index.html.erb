<% if admin? %>
   <h1> Welcome Admin <%=@user.username%>, here is the current IPA list! </h1>
<% else %> 
   <h1> Welcome <%=@user.username%>, here is the current IPA list! </h1>
<% end %>
<%= flash[:notice] %>
<h3> Would you like to <%= link_to "Create a new IPA?", new_ipa_path %></h3><br>
<h4> IPA's are listed by most recently added! </h4>
<ul>
<% @ipas.each do |i| %>
    <h4> Name: <%= link_to i.name, ipa_path(i) %> </h4>
    <li>  Brand: <%= i.brand %> </li>
    <br>
    <li>  Size: <%= i.size %> oz. </li>
    <br>
    <li>  Created at: <%= i.created_at.strftime("%b %e, %l:%M %p") %>  </li>
    <br>
    <% end %>
</ul>


