<h1> New User Sign Up </h1>

<%= form_for @user do |f| %>
    <%= f.label :username %> 
    <%= f.text_field :username %>
    <br>
    <%= f.label :email %> 
    <%= f.text_field :email %>
    <br>   
    <%= f.label :password %> 
    <%= f.password_field :password %>
    <br>
    <%= f.label :bio %> 
    <%= f.text_area :bio %>
    <br>   
    <%= f.label :admin %>
    <%= f.check_box :admin %>
    <br>
    
    <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

  <br>
    <%= f.submit %>
  <% end %>

  <%= link_to('Sign Up with Facebook!', '/auth/facebook') %>