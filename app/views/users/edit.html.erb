<h1> Edit <%=@user.username%>'s Info </h1>
<%= form_for @user do |f| %>
    <%= f.label :username %> 
    <%= f.text_field :username %>
    <br>
    <%= f.label :bio %> 
    <%= f.text_area :bio %>
    <br>   

    <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

  <br>
    <%= f.submit %>
  <% end %>